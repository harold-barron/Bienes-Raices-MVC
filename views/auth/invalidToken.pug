extends ../layout/index

block  content 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes     
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page 

        div(class= "bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
            p(class= error ? 'bg-red-500' : 'bg-green-500').py-2.px-5.rounded-lg.w-full.text-white.uppercase= message
            if error
                div.flex.items-center.justify-around
                    a(href="/auth/sign-up" class="text-center text-gray-700 text-xs") Create account
                    a.text-gray-700.text-xs(href="/auth/reset-password") Forgot my password
            else
                div.flex.items-center.justify-around 
                    a.text-center.text-gray-700.text-xs(href="/auth/login") Login
