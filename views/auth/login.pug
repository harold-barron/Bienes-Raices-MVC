extends ../layout/index

block  content 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes     
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page 

        div.mt-8.mx-auto.max-w-md
            .bg-withe.py-8.px-4.shadow
                form(method = "POST" action="/auth/login").space-y-5
                    input(type="hidden" name= "_csrf" value= csrfToken)
                    div     
                        label(for="email").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Email
                        input(placeholder="Email" type="email" name="email" value = user ? user.email : '')#email.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-800    
                        if emailError   
                            p.bg-red-600.text-white.upercase.text-xs.text-center.p-2.mb-1.font-bold= emailError
                    div     
                        label(for="password").block.text-sm.uppercase.text-gray-500.mb-2.font-bold Password
                        input(placeholder="Password" type="password" name="password")#password.w-full.px-3.py-2.border.border-gray-600.rounded-md.placeholder-gray-800
                        if passwordError   
                            p.bg-red-600.text-white.upercase.text-xs.text-center.p-2.mb-1.font-bold= passwordError
                    input(class ="w-full bg-red-600  hover:bg-pink-700 font-bold py-3 cursor-pointer" type="submit" value = "Login")

                    div.flex.items-center.justify-around
                        a.text-gray-700.text-xs(href="/auth/sign-up") New to Bienes raices? Sign up
                        a.text-gray-700.text-xs(href="/auth/reset-password") Forgot my password